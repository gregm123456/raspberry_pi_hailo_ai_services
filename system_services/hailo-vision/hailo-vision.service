[Unit]
Description=Hailo Vision (Qwen VLM on Hailo-10H)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple

User=hailo-vision
Group=hailo-vision

# Set working directory for log file creation
WorkingDirectory=/var/lib/hailo-vision

# Ensure writable state dir exists and is owned correctly
StateDirectory=hailo-vision

# XDG wiring: force config + data locations
Environment=XDG_CONFIG_HOME=/etc/xdg
Environment=XDG_CONFIG_DIRS=/etc/xdg
Environment=XDG_DATA_HOME=/var/lib
Environment=XDG_DATA_DIRS=/var/lib:/usr/share:/usr/local/share

# HailoRT logging to journald
Environment=HAILO_PRINT_TO_SYSLOG=1

# Python unbuffered output for real-time logging
Environment=PYTHONUNBUFFERED=1

ExecStart=/opt/hailo-vision/venv/bin/python3 /opt/hailo-vision/hailo_vision_server.py

Restart=always
RestartSec=5
TimeoutStopSec=30
KillSignal=SIGTERM

# Resource limits (tunable via systemd drop-in overrides)
MemoryMax=4G
CPUQuota=80%

# Security hardening
PrivateTmp=yes
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
ReadWritePaths=/var/lib/hailo-vision /etc/xdg/hailo-vision

[Install]
WantedBy=multi-user.target
